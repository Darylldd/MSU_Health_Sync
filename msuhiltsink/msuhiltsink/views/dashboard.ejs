<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - MSU HealthSync</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script> 
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script> 
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <style>
        body {
            background-color: #f4f4f9;
            font-family: Arial, sans-serif;
        }
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            height: 100%;
            width: 220px;
            background-color: #355E3B;
            padding-top: 20px;
        }
        .sidebar a {
            padding: 15px;
            text-align: left;
            display: block;
            color: white;
            text-decoration: none;
            font-weight: bold;
            cursor: pointer;
        }
        .sidebar a:hover {
            background-color: #4CAF50;
        }
        .content {
            margin-left: 240px;
            padding: 20px;
        }
        .content h1 {
            color: #333;
        }
        footer {
            margin-top: 20px;
            text-align: center;
            font-size: 14px;
            color: #666;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <img src="https://mmc-enrollment.minsu.edu.ph/img/logo.png" alt="MSU Logo" class="img-fluid mb-3" style="padding-left: 15px;">
        <a id="dashboard-link" href="">Dashboard</a>
        <a id="patients-link" href="">Patient Records</a>
        <a id="medicines-link" href="">Medicine Inventory</a>
        <a id="services-link" href="">Medical Services</a>
        <a id="history-link" href="">History</a>
    </div>
    

    <!-- Main content area -->
    <div class="content">
        <div id="dynamic-content">
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            let currentPageId = ''; // Track the current page (no initial page)
            
            // Handle sidebar link clicks
            const links = document.querySelectorAll('.sidebar a');
            links.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault(); // Prevent default link behavior
            
                    // Get the id of the clicked link
                    const pageId = this.id;
            
                    // If the user clicks the same link, do nothing
                    if (pageId === currentPageId) {
                        return;
                    }
            
                    let url = ''; // URL to fetch the content
            
                    switch (pageId) {
                        case 'dashboard-link':
                            url = '/dashboard'; // Endpoint for dashboard content
                            break;
                        case 'patients-link':
                            url = '/patients'; // Endpoint for patient records content
                            break;
                        case 'medicines-link':
                            url = '/medicines'; // Endpoint for medicine inventory content
                            break;
                        case 'services-link':
                            url = '/services'; // Endpoint for medical services content
                            break;
                        case 'history-link':
                            url = '/history'; // Endpoint for history content
                            break;
                    }
            
                    // Fetch the content from the server using the corresponding URL
                    fetch(url)
                        .then(response => {
                            if (!response.ok) {
                                throw new Error('Failed to load the content');
                            }
                            return response.text(); // Read the response as text
                        })
                        .then(data => {
                            document.getElementById('dynamic-content').innerHTML = data; // Update the content area
                            currentPageId = pageId; // Update the current page id
                        
                            // Re-initialize DataTables after the new content is loaded
                            if (pageId === 'history-link') {
                                const medicinesTableEl = $('#medicinesTable');
                                if ($.fn.DataTable.isDataTable(medicinesTableEl)) {
                                    medicinesTableEl.DataTable().destroy(); // Destroy if exists
                                }
                                medicinesTableEl.DataTable({
                                    "searching": true // Enable the search function
                                });
                            } else if (pageId === 'patients-link') {
                                const patientsTableEl = $('#patientsTable');
                                if ($.fn.DataTable.isDataTable(patientsTableEl)) {
                                    patientsTableEl.DataTable().destroy(); // Destroy if exists
                                }
                                patientsTableEl.DataTable({
                                    "searching": true // Enable the search function
                                });
                            } else if (pageId === 'services-link') {
                                const servicesTableEl = $('#servicesTable');
                                if ($.fn.DataTable.isDataTable(servicesTableEl)) {
                                    servicesTableEl.DataTable().destroy(); // Destroy if exists
                                }
                                servicesTableEl.DataTable({
                                    "searching": true // Enable the search function
                                });
                            }
                        })
                        .catch(error => {
                            alert('Error: ' + error.message); // Display any error that occurs
                        });
                });
            });
        });
        
    </script>     
</body>
</html>
